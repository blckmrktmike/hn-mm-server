<?xml version="1.0" encoding="UTF-8"?>
<SquareLineProject version="1.0.0">
  <ProjectSettings>
    <Resolution width="1024" height="600" />
    <Orientation landscape="true" />
  </ProjectSettings>
  <Screens>
    <Screen id="scr_scan" name="Scan Screen" active="true">
      <Container name="topbar" height="64" width="1024" align="TOP_MID" background="0x1A237E">
        <Label name="lbl_mission" text="MEDICAL MISSION" align="LEFT_MID" x="20" />
        <Label name="lbl_station" text="ID SCAN STATION" align="CENTER" />
        <Label name="chip_cam" text="CAM: IDLE" align="RIGHT_MID" x="-280" style="chip" />
        <Label name="chip_ocr" text="OCR: IDLE" align="RIGHT_MID" x="-170" style="chip" />
        <Label name="chip_net" text="NET: LAN" align="RIGHT_MID" x="-80" style="chip" />
        <Label name="label_time" text="12:00" align="RIGHT_MID" x="-20" />
      </Container>
      
      <Container name="content" y="64" height="456" width="1024" layout="flex_row">
        <Container name="cam_card" width="580" height="420" style="card">
          <Container name="cam_placeholder" width="540" height="320" background="0x000000">
            <Label text="CAMERA PREVIEW" align="CENTER" color="0xFFFFFF" />
            <Container name="box_overlay" hidden="true" />
            <Spinner name="spinner_ocr" hidden="true" />
          </Container>
        </Container>
        
        <Container name="right_col" width="380" height="420" layout="flex_column">
          <Container name="ctrl_card" height="200" width="360" style="card">
            <Switch name="sw_cam_ready" />
            <Button name="btn_capture" height="72" width="100%" style="btn_primary">
              <Label text="Capture &amp; OCR" />
            </Button>
          </Container>
          <Container name="res_card" height="180" width="360" style="card">
            <Label name="lbl_name" text="-" />
            <Bar name="bar_conf" width="200" />
          </Container>
        </Container>
      </Container>

      <Container name="nav" height="80" width="1024" align="BOTTOM_MID" layout="flex_row">
        <Button name="nav_scan_btn" text="SCAN" width="200" height="60" />
        <Button name="nav_fields_btn" text="FIELDS" width="200" height="60" />
        <Button name="nav_settings_btn" text="SETTINGS" width="200" height="60" />
      </Container>
    </Screen>

    <Screen id="scr_fields" name="Fields Screen" hidden="true">
      <!-- Logic similar to scr_scan with form layout -->
    </Screen>

    <Screen id="scr_settings" name="Settings Screen" hidden="true">
      <!-- Logic similar to scr_scan with settings cards -->
    </Screen>
  </Screens>
</SquareLineProject>
